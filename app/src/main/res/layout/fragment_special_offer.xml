<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="?attr/android:actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_toLeftOf="@+id/iv_add_news"
            android:layout_toRightOf="@+id/iv_back"
            android:gravity="left"
            android:text="@string/special_offers"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:src="@mipmap/icon_back_black" />

        <ImageView
            android:id="@+id/iv_add_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:src="@mipmap/icon_add_new" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_header"
        android:background="#E1E1EB"
        android:orientation="horizontal"
        android:paddingBottom="7dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/search_bg"
            android:padding="5dp"
            android:visibility="gone">


            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spn_stores"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:spinnerMode="dialog">

            </android.support.v7.widget.AppCompatSpinner>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:rotation="90"
                android:src="@mipmap/icon_arrow_right_menu" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/search_bg"
            android:padding="5dp">


            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spn_categories"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:spinnerMode="dialog">

            </android.support.v7.widget.AppCompatSpinner>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:rotation="90"
                android:src="@mipmap/icon_arrow_right_menu" />
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_search_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_filter"
        android:background="#E1E1EB"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:visibility="visible"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/rl_country"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/search_bg"
            android:padding="5dp"
            android:visibility="visible">


            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spn_country"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:spinnerMode="dialog">

            </android.support.v7.widget.AppCompatSpinner>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:rotation="90"
                android:src="@mipmap/icon_arrow_right_menu" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/search_bg"
            android:padding="5dp"
            android:visibility="visible">


            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spn_city"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:spinnerMode="dialog">

            </android.support.v7.widget.AppCompatSpinner>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:rotation="90"
                android:src="@mipmap/icon_arrow_right_menu" />
        </RelativeLayout>

    </LinearLayout>

    <com.ossul.view.CustomSwipeRefreshLayout
        android:id="@+id/customRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_loader"
        android:layout_below="@id/ll_search_filter"
        android:background="#E1E1EB"
        android:paddingBottom="@dimen/dp5"
        android:paddingTop="@dimen/dp5">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_special_offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" />

    </com.ossul.view.CustomSwipeRefreshLayout>

    <include
        android:id="@+id/rl_loader"
        layout="@layout/layout_bottom_loader" />

    <RelativeLayout
        android:id="@+id/back_dim_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/no_data"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:visibility="gone" />

</RelativeLayout>