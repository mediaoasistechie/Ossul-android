<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F8FA"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight=".2"
        android:gravity="center_vertical">

        <com.ossul.view.CircularImageView
            android:id="@+id/_civ_member"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/profile_pic_container"
            app:civ_borderColor="@color/grey"
            app:civ_borderWidth="1dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight=".68"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="Rajan Kumar Tiwari"
        android:textColor="@color/text_color"
        android:textSize="17.2sp" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight=".12"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/cb_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="false" />
    </RelativeLayout>
</LinearLayout>
