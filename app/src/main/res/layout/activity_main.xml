<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_home_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity">

        <RelativeLayout
            android:id="@+id/ll_home_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/toolbar_layout"
                layout="@layout/toolbar_main_activity"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize" />
            <!--

                        <include
                            android:id="@+id/header"
                            layout="@layout/main_activity_header"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp40"
                            android:layout_below="@id/toolbar_layout" />
            -->
            <!--
                        <include
                            android:id="@+id/footer"
                            layout="@layout/main_activity_footer"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_footer"
                            android:visibility="visible"
                            android:layout_alignParentBottom="true" />-->

            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/toolbar_layout" />

        </RelativeLayout>


        <include
            android:id="@+id/nav_home_right_drawer"
            layout="@layout/home_left_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left" />


    </android.support.v4.widget.DrawerLayout>

</FrameLayout>
