<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_toRightOf="@+id/iv_back"
            android:text="My Profile"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:src="@mipmap/icon_back_black" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_edit_profile"
        android:layout_below="@+id/rl_header"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_top_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="1.5dp"
                android:layout_marginRight="1.5dp"
                android:background="@color/cover_pic_bg_color">

                <ImageView
                    android:id="@+id/iv_wall_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:background="@color/edit_btn_color"
                    android:scaleType="fitXY" />

                <com.ossul.view.CircularImageView
                    android:id="@+id/civ_user_image"
                    android:layout_width="@dimen/profile_pic_size"
                    android:layout_height="@dimen/profile_pic_size"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp25"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/camera_placeholder"
                    app:civ_border="true"
                    app:civ_borderColor="@color/divider_color"
                    app:civ_borderWidth="2dp" />

                <ImageView
                    android:id="@+id/iv_upload_profile_pic"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignRight="@+id/civ_user_image"
                    android:layout_alignTop="@+id/civ_user_image"
                    android:padding="@dimen/dp5"
                    android:src="@mipmap/icon_plus"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/civ_user_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp5"
                    android:alpha=".5"
                    android:background="@color/black"
                    android:padding="2dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_user_name"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dp5"
                    android:alpha=".5"
                    android:background="@color/black"
                    android:drawableLeft="@mipmap/icon_location_small"
                    android:drawablePadding="@dimen/dp5"
                    android:padding="2dp"
                    android:textColor="@color/white"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/iv_upload_wall_pic"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp5"
                    android:padding="@dimen/dp5"
                    android:src="@mipmap/icon_plus"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_middle"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_below="@+id/rl_top_image"
                android:layout_marginLeft="1.5dp"
                android:layout_marginRight="1.5dp"
                android:background="@color/purple"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tv_following"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Following\n0"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/dp5"
                    android:paddingTop="@dimen/dp5"
                    android:src="@drawable/vertical_divider" />

                <TextView
                    android:id="@+id/tv_offers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Offers\n0"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/dp5"
                    android:paddingTop="@dimen/dp5"
                    android:src="@drawable/vertical_divider" />

                <TextView
                    android:id="@+id/tv_requests"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Requests\n0"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_middle"
                android:layout_marginTop="@dimen/dp15"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_user_black" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_toRightOf="@+id/iv_name"
                        android:background="@drawable/et_background_profile"
                        android:imeOptions="actionNext"
                        android:gravity="left"
                        android:inputType="textPersonName"
                        android:paddingBottom="@dimen/dp10"
                        android:paddingRight="@dimen/dp5"
                        android:paddingTop="@dimen/dp10"
                        android:textColor="@color/text_color"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10">

                    <ImageView
                        android:id="@+id/iv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_email_black" />

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_toRightOf="@+id/iv_email"
                        android:background="@drawable/et_background_profile"
                        android:imeOptions="actionNext"
                        android:gravity="left"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="@dimen/dp10"
                        android:paddingRight="@dimen/dp5"
                        android:paddingTop="@dimen/dp10"
                        android:textColor="@color/text_color"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10">

                    <ImageView
                        android:id="@+id/iv_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_phone_black" />
                    <EditText
                        android:id="@+id/et_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_mobile"
                        android:layout_marginLeft="@dimen/dp10"
                        android:background="@drawable/et_background_profile"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:paddingBottom="@dimen/dp10"
                        android:paddingRight="@dimen/dp5"
                        android:paddingTop="@dimen/dp10"
                        android:maxLength="15"
                        android:textColor="@color/text_color"
                        android:textSize="16sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/et_background"
                            android:editable="false"
                            android:inputType="number"
                            android:paddingBottom="@dimen/dp10"
                            android:paddingTop="@dimen/dp10"
                            android:text="+"
                            android:visibility="gone"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/et_bottom_line_color"
                            android:textSize="16sp" />
                        <EditText
                            android:id="@+id/et_area_code"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:background="@drawable/et_background_profile"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:singleLine="true"
                            android:paddingBottom="@dimen/dp10"
                            android:paddingTop="@dimen/dp10"
                            android:text="966"
                            android:visibility="gone"
                            android:textColor="@color/text_color"
                            android:textSize="16sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp10"
                            android:background="@drawable/et_background_profile"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:paddingBottom="@dimen/dp10"
                            android:paddingRight="@dimen/dp5"
                            android:paddingTop="@dimen/dp10"
                            android:maxLength="15"
                            android:textColor="@color/text_color"
                            android:textSize="16sp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10">

                    <ImageView
                        android:id="@+id/iv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_location" />

                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_toRightOf="@+id/iv_location"
                        android:background="@drawable/et_background_profile"
                        android:hint="Address"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:paddingBottom="@dimen/dp10"
                        android:paddingRight="@dimen/dp5"
                        android:paddingTop="@dimen/dp10"
                        android:textColor="@color/text_color"
                        android:textSize="16sp" />
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/edit_btn_color"
        android:gravity="center"
        android:text="Edit Profile"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>
