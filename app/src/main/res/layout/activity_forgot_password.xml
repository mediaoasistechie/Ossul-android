<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/app_bg">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp50"
        android:adjustViewBounds="true"
        android:src="@mipmap/logo_login" />

    <TextView
        android:id="@+id/tv_forgot_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="@dimen/dp30"
        android:gravity="center"
        android:padding="@dimen/dp5"
        android:text="Please enter your email then click submit"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/rl_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_forgot_text"
        android:layout_marginLeft="@dimen/dp25"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@+id/iv_name"
            android:background="@drawable/et_background"
            android:hint="Your email"
            android:gravity="left"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:paddingBottom="@dimen/dp10"
            android:paddingRight="@dimen/dp5"
            android:paddingTop="@dimen/dp10"
            android:textColor="@android:color/white"
            android:textColorHint="@color/et_bottom_line_color"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_email"
        android:layout_marginLeft="@dimen/dp25"
        android:layout_marginRight="@dimen/dp25"
        android:layout_marginTop="@dimen/dp30"
        android:background="@drawable/yellow_btn_selector"
        android:gravity="center"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>