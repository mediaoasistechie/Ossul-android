<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/app_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:src="@mipmap/icon_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_header"
            android:layout_marginLeft="@dimen/dp25"
            android:text="Sign up"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <com.ossul.view.CircularImageView
            android:id="@+id/civ_user_image"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_below="@+id/tv_sign_up"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp25"
            android:src="@mipmap/camera_placeholder" />


        <RelativeLayout
            android:id="@+id/rl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/civ_user_image"
            android:layout_marginLeft="@dimen/dp25"
            android:layout_marginTop="@dimen/dp25">


            <ImageView
                android:id="@+id/iv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_username" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_toRightOf="@+id/iv_name"
                android:background="@drawable/et_background"
                android:gravity="left"
                android:hint="Name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:paddingBottom="@dimen/dp10"
                android:paddingRight="@dimen/dp5"
                android:paddingTop="@dimen/dp10"
                android:textColor="@android:color/white"
                android:textColorHint="@color/et_bottom_line_color"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_name"
            android:layout_marginLeft="@dimen/dp25"
            android:layout_marginTop="15dp">


            <ImageView
                android:id="@+id/iv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_email" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_toRightOf="@+id/iv_email"
                android:background="@drawable/et_background"
                android:gravity="left"
                android:hint="Email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:paddingBottom="@dimen/dp10"
                android:paddingRight="@dimen/dp5"
                android:paddingTop="@dimen/dp10"
                android:textColor="@android:color/white"
                android:textColorHint="@color/et_bottom_line_color"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_email"
            android:layout_marginLeft="@dimen/dp25"
            android:layout_marginTop="15dp">


            <ImageView
                android:id="@+id/iv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_password" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_password"
                android:background="@drawable/et_background"
                android:gravity="left"
                android:hint="Password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:paddingBottom="@dimen/dp10"
                android:paddingRight="@dimen/dp5"
                android:paddingTop="@dimen/dp10"
                android:textColor="@android:color/white"
                android:textColorHint="@color/et_bottom_line_color"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_password"
            android:layout_marginLeft="@dimen/dp25"
            android:layout_marginTop="15dp">


            <ImageView
                android:id="@+id/iv_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_phone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_background"
                    android:editable="false"
                    android:inputType="number"
                    android:paddingBottom="@dimen/dp10"
                    android:paddingTop="@dimen/dp10"
                    android:text="+"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/et_bottom_line_color"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/et_area_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:background="@drawable/et_background"
                    android:editable="false"
                    android:hint="Area Code"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:paddingBottom="@dimen/dp10"
                    android:paddingTop="@dimen/dp10"
                    android:singleLine="true"
                    android:text="966"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/et_bottom_line_color"
                    android:textSize="16sp"
                    android:visibility="gone" />


                <EditText
                    android:id="@+id/et_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:background="@drawable/et_background"
                    android:gravity="left"
                    android:hint="Number"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:paddingBottom="@dimen/dp10"
                    android:paddingRight="@dimen/dp5"
                    android:paddingTop="@dimen/dp10"
                    android:maxLength="15"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/et_bottom_line_color"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/rl_mobile"
            android:layout_marginLeft="@dimen/dp25"
            android:layout_marginRight="@dimen/dp25"
            android:layout_marginTop="40dp"
            android:background="@drawable/yellow_btn_selector"
            android:gravity="center"
            android:text="Register"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_register"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp25"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/dp5"
                android:text="English"
                android:textColor="@color/colorAccent"
                android:textSize="14.4sp" />

            <TextView
                android:id="@+id/tv_ar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:padding="@dimen/dp5"
                android:text="عربى"
                android:textColor="@color/colorAccent"
                android:textSize="14.4sp" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
