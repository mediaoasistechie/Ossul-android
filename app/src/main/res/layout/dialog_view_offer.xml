<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/ll_main_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/property_pupup_bg"
            android:paddingBottom="@dimen/dp10"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:paddingTop="10dp">


            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_close">

                <RelativeLayout
                    android:id="@+id/rl_image"
                    android:layout_width="90dp"
                    android:layout_height="95dp"
                    android:background="@color/office_image_bg"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_property"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_property_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_toRightOf="@+id/rl_image"
                    android:gravity="left"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_property_title"
                    android:layout_toRightOf="@+id/rl_image"
                    android:gravity="left"
                    android:maxLines="4"
                    android:textColor="@color/purple"
                    android:textSize="14.2sp" />


                <RelativeLayout
                    android:id="@+id/tv_min_max_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_description"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@+id/rl_image"
                    android:gravity="left">

                    <TextView
                        android:id="@+id/tv_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="From "
                        android:textColor="@color/text_red"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_min_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_from"
                        android:singleLine="true"
                        android:text="89,000 SR "
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_min_price"
                        android:singleLine="true"
                        android:text="To "
                        android:textColor="@color/text_red"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_max_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_to"
                        android:singleLine="true"
                        android:text="150,000 SR"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_top"
                android:layout_marginTop="15dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/country"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight=".5"
                    android:gravity="left"
                    android:text="Country"
                    android:textColor="@color/text_color"
                    android:textSize="14.8sp" />


                <TextView
                    android:id="@+id/tv_country"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight=".5"
                    android:gravity="right"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14.4sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_country"
                android:layout_marginTop="@dimen/dp1"
                android:weightSum="1">

                <TextView
                    android:id="@+id/city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight=".5"
                    android:gravity="left"
                    android:text="City"
                    android:textColor="@color/text_color"
                    android:textSize="14.8sp" />


                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight=".5"
                    android:gravity="right"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14.4sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_offer_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_city"
                android:layout_marginTop="@dimen/dp1"
                android:weightSum="1">

                <TextView
                    android:id="@+id/offer_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight=".5"
                    android:gravity="left"
                    android:text="Offer type"
                    android:textColor="@color/text_color"
                    android:textSize="14.8sp" />


                <TextView
                    android:id="@+id/tv_offer_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight=".5"
                    android:gravity="right"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14.4sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_property_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_offer_type"
                android:weightSum="1">

                <TextView
                    android:id="@+id/property_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight=".5"
                    android:gravity="left"
                    android:text="Property type"
                    android:textColor="@color/text_color"
                    android:textSize="14.8sp" />


                <TextView
                    android:id="@+id/tv_property_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight=".5"
                    android:gravity="right"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14.4sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_property_type"
                android:layout_marginTop="@dimen/dp1"
                android:weightSum="1">

                <TextView
                    android:id="@+id/zone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight=".5"
                    android:gravity="left"
                    android:text="Zone"
                    android:textColor="@color/text_color"
                    android:textSize="14.8sp" />


                <TextView
                    android:id="@+id/tv_zone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight=".5"
                    android:gravity="right"
                    android:maxLines="2"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14.4sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_zone"
                android:layout_marginTop="@dimen/dp1"
                android:visibility="gone"
                android:weightSum="1">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight=".5"
                    android:gravity="left"
                    android:text="Price"
                    android:textColor="@color/text_color"
                    android:textSize="14.8sp" />


                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight=".5"
                    android:gravity="right"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14.4sp" />

            </LinearLayout>


            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/close" />

            <ProgressBar
                android:id="@+id/progress"
                style="?android:progressBarStyleLarge"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/property_pupup_bg"
            android:orientation="vertical"
            android:padding="@dimen/dp15">

            <TextView
                android:id="@+id/offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offer"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_offer_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:lines="2"
                android:maxLines="5"
                android:textColor="@color/text_color"
                android:textSize="14.2sp" />

            <LinearLayout
                android:id="@+id/ll_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tv_comment_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".6"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="2 comments"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4">

                    <TextView
                        android:id="@+id/tv_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/office_image_bg"
                        android:drawableLeft="@drawable/ic_chat"
                        android:drawablePadding="@dimen/dp3"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/dp5"
                        android:paddingEnd="12dp"
                        android:paddingStart="12dp"
                        android:paddingTop="@dimen/dp5"
                        android:singleLine="true"
                        android:text="Comment"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_attachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_attachment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/attachment"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_attachment"
                    android:layout_width="46dp"
                    android:scaleType="centerCrop"
                    android:layout_height="44dp"
                    android:layout_marginTop="@dimen/dp2" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>